<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:elevation="0dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/post_lost"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/darkest_shade"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/PostLostLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PostLostLayout"
            android:orientation="vertical"
            android:padding="16dp"
            tools:ignore="NotSibling">

            <LinearLayout
                android:id="@+id/photos_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/resource_new" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/resource_new" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/resource_new" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/resource_new" />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/resource_new" />
            </LinearLayout>

            <TextView
                android:id="@+id/my_found_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightest_shade"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                tools:ignore="RtlSymmetry"
                tools:text="@tools:sample/cities" />

            <TextView
                android:id="@+id/my_found_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightest_shade"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                tools:ignore="RtlSymmetry"
                tools:text="@tools:sample/us_phones" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/my_found_message"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/lightest_shade"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="RtlSymmetry"
                    android:scrollbars="vertical"
                    tools:text="@tools:sample/lorem/random" />
            </ScrollView>


            <TextView
                android:id="@+id/my_found_where"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightest_shade"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry"
                tools:text="@tools:sample/lorem" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/my_found_edit"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="50"
                    android:backgroundTint="@color/darkest_shade"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Edit"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/my_found_delete"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="50"
                    android:backgroundTint="@color/darkest_shade"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Delete"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>